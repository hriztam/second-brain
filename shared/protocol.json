{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SecondBrain IPC Protocol",
  "description": "Message protocol for daemon-UI communication over Unix domain socket",

  "definitions": {
    "Mode": {
      "type": "string",
      "enum": ["idle", "dictation", "intelligent", "agent"],
      "description": "Current operating mode of the daemon"
    },

    "Request": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "type": { "const": "get_status" }
          },
          "required": ["type"]
        },
        {
          "type": "object",
          "properties": {
            "type": { "const": "set_mode" },
            "mode": { "$ref": "#/definitions/Mode" }
          },
          "required": ["type", "mode"]
        },
        {
          "type": "object",
          "properties": {
            "type": { "const": "ping" }
          },
          "required": ["type"]
        }
      ]
    },

    "DaemonStatus": {
      "type": "object",
      "properties": {
        "version": { "type": "string" },
        "mode": { "$ref": "#/definitions/Mode" },
        "hotkey_registered": { "type": "boolean" },
        "uptime_secs": { "type": "integer", "minimum": 0 }
      },
      "required": ["version", "mode", "hotkey_registered", "uptime_secs"]
    },

    "Response": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "type": { "const": "status" },
            "version": { "type": "string" },
            "mode": { "$ref": "#/definitions/Mode" },
            "hotkey_registered": { "type": "boolean" },
            "uptime_secs": { "type": "integer" }
          },
          "required": [
            "type",
            "version",
            "mode",
            "hotkey_registered",
            "uptime_secs"
          ]
        },
        {
          "type": "object",
          "properties": {
            "type": { "const": "mode_change" },
            "mode": { "$ref": "#/definitions/Mode" },
            "active": { "type": "boolean" }
          },
          "required": ["type", "mode", "active"]
        },
        {
          "type": "object",
          "properties": {
            "type": { "const": "pong" }
          },
          "required": ["type"]
        },
        {
          "type": "object",
          "properties": {
            "type": { "const": "error" },
            "code": { "type": "string" },
            "message": { "type": "string" }
          },
          "required": ["type", "code", "message"]
        }
      ]
    }
  }
}
